<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <title>User Admin</title>
</head>

<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <p style="color: white">
                        User Controler
                    </p>
                </li>
                <li>
                    <a href="/user/admin">All Users</a>
                </li>
                <li>
                    <a href="/logout">Odjava</a>
                </li>
            </ul>
        </div>
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Glavni Meni</a>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Downloads</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each users}}
                        <tr>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            <td><a href="/user/downloads/{{this.id}}"><i class="fa fa-pencil fa-2x" aria-hidden="true"></a></i></td>
                            <td><a href="/user/deleteUser/{{this.id}}"><i class="fa fa-trash fa-2x" aria-hidden="true"></a></i></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/admin.js"></script>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>

</html>
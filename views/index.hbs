<script src="/js/scrollreveal.js"></script>
<script>
    window.sr = ScrollReveal();
    sr.reveal('#bestMovies', {
        duration: 2000,
        distance:'1000px',
        origin:'left'
    });
    sr.reveal('#otherMovies', {
        duration: 2000,
        distance:'1000px',
        origin: 'right',
        viewFactor: 0.25
    });
</script>

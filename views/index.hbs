<!--Slider-->
<section>
    <div class="slider">
        <ul class="slides">
            <li>
                <img src="/images/slider1.jpg">
                <div class="caption center-align">
                    <h2 class="yellow-text">The Best Movies</h2>
                    <h5 class="light grey-text text-lighten-3">All in one place</h5>
                </div>
            </li>
            <li>
                <img src="/images/slider3.jpg">
                <div class="caption right-align">
                    <h3 class="yellow-text">Watch Them</h3>
                    <h5 class="light grey-text text-lighten-3">All day, every day</h5>
                </div>
            </li>
            <li>
                <img src="/images/slider4.jpg">
                <div class="caption left-align">
                    <h3 class="yellow-text">Movies in the Best Quality</h3>
                    <h5 class="light white-text text-lighten-3">720p, 1080p and 3D</h5>
                </div>
            </li>
            <li>
                <img src="/images/slider2.jpg">
                <div class="caption center-align">
                    <h3 class="yellow-text">Pay close to nothing</h3>
                    <h5 class="light white-text">Free or 5$</h5>
                </div>
            </li>
        </ul>
    </div>
</section>
<!--Slider End-->

<!--Best Movies-->
<section id="bestMovies">
    <div class="parallax-container" style="height: 10%;">
        <div class="container">
            <h2 class="center-align yellow-text text-accent-2" style="font-family: Vanity;">Best Movies</h2>
            <div class="row">
                {{#each bestMovies}}
                <div class="col l3 s6">
                    <div class="card">
                        <div class="card-image">
                            <a href="/movie/{{this.id}}">
                                <img class="movieCover responsive-img" src={{this.medium_cover_image}}>
                            </a>
                        </div>
                    </div>
                    <h5 class="flow-text white-text">{{this.title}}</h5>
                </div>
                {{/each}}
            </div>
        </div>
        <div class="parallax">
            <img src="/images/bestMoviesBackground.jpg">
        </div>
    </div>
</section>
<!--Best Movies End-->

<!--Other Movies-->
